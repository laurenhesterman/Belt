<body >
<div>
<h1 class="text-info" > All who have added <%= @thissong.title %>, by <%= @thissong.artist %></h1>

<table class="table table-striped">
<thead class="thead-dark">
<tr>
    <th scope="col">Name</th>
    <th scope="col">Total songs added </th>    
                             
</tr>

</thead>
<tbody>

<% @theseusers.each do |playlist| %>
    
    
    <tr>
    
    <td>
        <a href="/users/<%= playlist.user.id %>"> <%= playlist.user.first_name %> <%= playlist.user.last_name %></a>
    </td> 
    <td>
    <%= Playlist.all.where("user_id = ?", playlist.user.id).count %>
    </td> 
   
    </tr>
    
<% end %>
</tbody>

</table>




<form action="/sessions/<%=current_user.id%>" method="post" class="together">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type="hidden" name="_method" value="delete">
<input type="submit" value="Log Out" >
</form> <a href="/songs"> Dashboard<a>

</body>
